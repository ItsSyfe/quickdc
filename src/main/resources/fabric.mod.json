{
  "schemaVersion": 1,
  "id": "quickdc",
  "version": "1.0.0",

  "name": "Quick Disconnect",
  "description": "Quickly disconnect and reconnect to a server via hotkeys! Useful for combat orientated PvP servers without combat log prevention.",
  "authors": [
    "Syfe"
  ],
  "contact": {
    "sources": "https://github.com/ItsSyfe/quickdc"
  },

  "license": "CC0-1.0",
  "icon": "assets/quickdc/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.syfe.quickdc.QuickDc"
    ],
    "client": [
      "me.syfe.quickdc.QuickDcClient"
    ]
  },
  "mixins": [
    "quickdc.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17",
    "fabric-key-binding-api-v1": "*"
  }
